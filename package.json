{
    "name": "yukako",
    "version": "1.0.0",
    "description": "A TypeScript Node.js project with React",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "yukako": "dist/index.cjs"
    },
    "scripts": {
        "build:server": "node build.cjs",
        "build:client": "vite build",
        "build": "npm run build:server && npm run build:client",
        "watch:server": "node build.cjs --watch",
        "watch:client": "vite build --watch",
        "watch": "npm run watch:server & npm run watch:client",
        "dev:server": "concurrently --raw \"npm run watch:server\" \"nodemon --enable-source-maps dist/index.cjs serve\"",
        "dev:client": "vite --port 5173",
        "dev:webhook": "lt --port 3000 --subdomain viowet-yukako",
        "dev": "concurrently --names \"server,client,webhook\" --prefix-colors \"blue,green,red\" \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:webhook\"",
        "start": "node dist/index.cjs serve",
        "generate": "./generate_workerd.sh",
        "package": "rm -rf dist/pkg && pkg ."
    },
    "dependencies": {
        "@openauthjs/openauth": "^0.4.3",
        "@tailwindcss/vite": "^4.1.4",
        "@tanstack/react-query": "^5.74.4",
        "@trpc/client": "^11.1.0",
        "@trpc/server": "^11.1.0",
        "@trpc/tanstack-react-query": "^11.1.0",
        "@workos-inc/node": "^7.47.0",
        "app-root-path": "^3.1.0",
        "capnp-es": "^0.0.9",
        "commander": "^13.1.0",
        "cookie-parser": "^1.4.7",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.42.0",
        "express": "^5.1.0",
        "ioredis": "^5.6.1",
        "morgan": "^1.10.0",
        "mysql2": "^3.14.0",
        "nanoid": "^5.1.5",
        "object-hash": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^4.1.4",
        "wait-on": "^8.0.3",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.1",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.24",
        "@types/object-hash": "^3.0.6",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@types/wait-on": "^5.3.4",
        "@vitejs/plugin-react": "^4.2.1",
        "@yao-pkg/pkg": "^6.4.0",
        "concurrently": "^9.1.2",
        "cpr": "^3.0.1",
        "drizzle-kit": "^0.31.0",
        "esbuild": "^0.25.2",
        "localtunnel": "^2.0.2",
        "nodemon": "^3.1.9",
        "tsx": "^4.19.3",
        "typescript": "^5.3.3",
        "vite": "^5.1.4"
    },
    "pkg": {
        "assets": [
            "dist/**/*"
        ],
        "outputPath": "dist/pkg",
        "ignore": [
            ".env",
            "dist/pkg/**/*"
        ]
    }
}
