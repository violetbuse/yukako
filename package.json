{
    "name": "yukako",
    "version": "1.0.0",
    "description": "A TypeScript Node.js project with React",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "yukako": "dist/cli.cjs"
    },
    "scripts": {
        "build:server:dev": "node build.cjs",
        "build:server:production": "node build.cjs --production",
        "build:client": "vite build",
        "build": "npm run build:server:dev && npm run build:client",
        "build:production": "npm run build:server:production && npm run build:client",
        "watch:server": "node build.cjs --watch",
        "watch:client": "vite build --watch",
        "watch": "npm run watch:server & npm run watch:client",
        "dev:server": "concurrently --raw \"npm run watch:server\" \"nodemon --enable-source-maps dist/index.cjs\"",
        "dev:client": "vite --port 5173",
        "dev:webhook": "lt --port 8787 --subdomain viowet-yukako",
        "dev": "concurrently --names \"server,client,webhook\" --prefix-colors \"blue,green,red\" \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:webhook\"",
        "start": "node dist/index.cjs",
        "generate": "./generate_workerd.sh",
        "package": "rm -rf dist/pkg && pkg . && chmod +x dist/pkg/*"
    },
    "dependencies": {
        "@clerk/clerk-react": "^5.30.0",
        "@clerk/express": "^1.4.9",
        "@clerk/themes": "^2.2.36",
        "@openauthjs/openauth": "^0.4.3",
        "@radix-ui/react-collapsible": "^1.1.8",
        "@radix-ui/react-dialog": "^1.1.11",
        "@radix-ui/react-dropdown-menu": "^2.1.12",
        "@radix-ui/react-select": "^2.2.2",
        "@radix-ui/react-separator": "^1.1.4",
        "@radix-ui/react-slot": "^1.2.0",
        "@radix-ui/react-tooltip": "^1.2.4",
        "@tailwindcss/vite": "^4.1.4",
        "@tanstack/react-query": "^5.74.4",
        "@trpc/client": "^11.1.0",
        "@trpc/server": "^11.1.0",
        "@trpc/tanstack-react-query": "^11.1.0",
        "app-root-path": "^3.1.0",
        "capnp-es": "^0.0.9",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "commander": "^13.1.0",
        "conf": "^13.1.0",
        "cookie-parser": "^1.4.7",
        "dns2": "^2.1.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.42.0",
        "express": "^5.1.0",
        "hash-sum": "^2.0.0",
        "http-proxy": "^1.18.1",
        "input-otp": "^1.4.2",
        "ioredis": "^5.6.1",
        "js-cookie": "^3.0.5",
        "lucide-react": "^0.503.0",
        "morgan": "^1.10.0",
        "mysql2": "^3.14.0",
        "nanoid": "^5.1.5",
        "next-themes": "^0.4.6",
        "open": "^10.1.1",
        "portfinder": "^1.0.36",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sonner": "^2.0.3",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.1.4",
        "wait-on": "^8.0.3",
        "wouter": "^3.7.0",
        "zod": "^3.24.3",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.8",
        "@types/dns2": "^2.0.9",
        "@types/express": "^5.0.1",
        "@types/hash-sum": "^1.0.2",
        "@types/http-proxy": "^1.17.16",
        "@types/js-cookie": "^3.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@types/wait-on": "^5.3.4",
        "@vitejs/plugin-react": "^4.2.1",
        "@yao-pkg/pkg": "^6.4.0",
        "concurrently": "^9.1.2",
        "cpr": "^3.0.1",
        "drizzle-kit": "^0.31.0",
        "esbuild": "^0.25.3",
        "localtunnel": "^2.0.2",
        "nodemon": "^3.1.9",
        "tsx": "^4.19.3",
        "tw-animate-css": "^1.2.8",
        "typescript": "^5.3.3",
        "vite": "^5.1.4"
    },
    "pkg": {
        "assets": [
            "dist/**/*"
        ],
        "outputPath": "dist/pkg",
        "ignore": [
            ".env",
            "dist/pkg/**/*"
        ]
    }
}
